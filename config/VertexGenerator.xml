<?xml version="1.0" encoding="ISO-8859-1"?>

<alg_conf>

<!--
Configuration sets for the VertexGenerator EventRecordVisitorI

Configurable Parameters:
................................................................................................
Name                        Type     Optional   Comment            Default
NUCL-R0                     double   yes        CommonParam        ///        
VtxGenerationMethod         int      no                            ///
................................................................................................
-->

 <param_set name="Default"> 
   <param type="string" name="CommonParam"> NUCL </param>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   NUCL-VtxGenerationMethod defines the intranuclear vertex generation method:
   - 0 : generated uniformly in volume within the nucleus 
   - 1 : generated according to a realistic nuclear density profile
   - 2 : generated according to Nieves's calculation
  -->
   <param type="int" name="VtxGenerationMethod"> 1 </param>

 </param_set>

 <param_set name="Nieves">
   <param type="string" name="CommonParam"> NUCL </param>
   <param type="int" name="VtxGenerationMethod"> 2 </param>
 </param_set>

</alg_conf>

